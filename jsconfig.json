{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "paths": {
      "src/*": ["./src/*"],
      "test/*": ["./test/*"]
    },
    "skipLibCheck": false,
    "strict": true,
    "useUnknownInCatchVariables": true
  },
  "exclude": ["node_modules"],
  "typeAcquisition": {
    "enable": true
  }
}
